{
  "name": "myapp",
  "version": "1.0.0",
  "description": "简单的Electron + React + Tailwind CSS应用",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "keywords": [
    "electron",
    "react",
    "tailwindcss",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.example.myapp",
    "productName": "My Electron App",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "portable"
    }
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "lucide-react": "^0.487.0",
    "postcss": "^8.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.3",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.4.1",
    "wait-on": "^8.0.3"
  },
  "devDependencies": {
    "vite": "^6.2.6"
  }
}
